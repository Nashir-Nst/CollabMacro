<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".CallAmbulance">

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RS Simpangan Depok"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingTop="70dp"
        android:textSize="30sp"/>

    <ImageView
        android:id="@+id/callambulance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text1"
        android:src="@drawable/ellipse"
        android:paddingTop="20dp"/>

    <ImageView
        android:id="@+id/btn_call1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingTop="20dp"
        android:layout_below="@+id/text1"
        android:src="@drawable/img_141" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="00:57"
        android:gravity="center"
        android:layout_below="@+id/callambulance"
        android:paddingTop="10dp"
        android:textSize="30sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/callambulance"
        android:layout_marginTop="175dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ellipse" />

        <ImageView
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="19dp"
            android:src="@drawable/ellipse" />

        <ImageView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:src="@drawable/ellipse" />

        <ImageView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:src="@drawable/ellipse" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/callambulance"
        android:layout_marginTop="190dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/call2">

        <ImageView
            android:layout_width="44dp"
            android:layout_height="45dp"
            android:src="@drawable/keypad" />

        <ImageView
            android:layout_width="44dp"
            android:layout_height="45dp"
            android:layout_marginLeft="50dp"
            android:src="@drawable/mute" />

        <ImageView
            android:layout_width="44dp"
            android:layout_height="45dp"
            android:layout_marginLeft="50dp"
            android:src="@drawable/speaker" />

        <ImageView
            android:layout_width="44dp"
            android:layout_height="45dp"
            android:layout_marginLeft="50dp"
            android:src="@drawable/more" />

    </LinearLayout>

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="30dp"
        android:layout_centerInParent="true"
        android:background="@drawable/endcall"
        android:layout_below="@+id/call2"
        android:paddingTop="50dp"/>

</RelativeLayout>